  justify-content: space-around;
  align-items: center;
  width:690rpx;
  height:200rpx;
  margin:20rpx auto;
  background-color:#fff;
}
.detail-container image{
  width: 100rpx;
  height:100rpx;
  border-radius:50%;
  margin-left:20rpx;
}
.detail-container .titles{
  margin-left:20rpx;
  width:220rpx;
}
.detail-container .detail-title{
  font-size:12px;
}
.detail-container .detail-subtitle{
  font-size:10px;
  color:#999;
}
.detail-container .mini-btn{
  
  color:#fff;
  font-size:10px;
  margin-left:180rpx;
}