.comment-container{
  width:750rpx;
  height:200rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-left:40rpx;
  border-bottom:1px solid #eee;
}
.comment-container image{
  border-radius:50%;
  width:100rpx;
  height:100rpx;
  margin-right:20rpx;
}
.comment-container .comment-right .comment-name{
  font-size:12px;
  margin-bottom:20rpx;
} 
.comment-container .comment-right .comment-content{
  font-size:10px;
}