/* pages/video/video.wxss */
@import "../../templates/comment/comment.wxss";
.video-container{
  width:750rpx;
  margin:0;
}
.video-container video{
  width:750rpx;
  height:400rpx;
  margin:0;
}
.video-container .lesson-info{
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size:12px;
  width:750rpx;
  height:200rpx;
  background-color:#eee;
}
.video-container .lesson-info .lesson-text{
  margin:20rpx;
}
.video-container .lesson-info .lesson-text .title{
  width:auto;
  font-size:14px;
  margin-left:40rpx;
  margin-bottom:10rpx;
}
.video-container .lesson-info .lesson-text .info{
  
  margin-left:40rpx;
}
.video-container .lesson-info button {
  height:60rpx;
  line-height:60rpx;
  font-size:12px;
  background:orange;
}
.video-container .navigate-bar{
  display:flex;
  height:100rpx;
  justify-content: space-around;
  align-items: center;
}
.video-container .navigate-bar .navigate-item{
  height:60rpx;
  font-size:14px;
}
.video-container .navigate-bar .active-on{
  border-bottom:1px solid #f94388;
  color:#f94388;
}
.video-container .navigate-content-1 .content-item{
  display:flex;
  justify-content: space-between;
  align-items: center;
  text-align:left;
  height:80rpx;
  margin-top:20rpx;
}
.video-container .navigate-content-1 .content-item .subtitle{
  margin-left:20rpx;
}
.video-container .navigate-content-1 .content-item .time{
  margin-right:20rpx;
}
.video-container .navigate-content-1 .active{
  color:#f94388;
}
.navigate-content-2{
  text-align: center;
  font-size:12px;
  line-height:80rpx;
  color:#999;
}